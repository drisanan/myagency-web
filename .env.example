# =============================================================================
# Environment Variables Template
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local - it contains secrets!
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Frontend API base URL (used by browser)
NEXT_PUBLIC_API_BASE_URL=https://api.myrecruiteragency.com

# Backend API base URL (used by server-side code)
API_BASE_URL=https://api.myrecruiteragency.com

# -----------------------------------------------------------------------------
# Google OAuth
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.myrecruiteragency.com/google/oauth/callback

# -----------------------------------------------------------------------------
# Sentry Error Tracking
# -----------------------------------------------------------------------------
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# -----------------------------------------------------------------------------
# AWS Configuration (for local serverless development)
# -----------------------------------------------------------------------------
AWS_PROFILE=myagency
AWS_REGION=us-west-1

# DynamoDB table name
DYNAMODB_TABLE=agency-narrative-crm

# S3 bucket for media uploads
MEDIA_BUCKET=athlete-narrative-api-media-prod

# -----------------------------------------------------------------------------
# Development Overrides (uncomment for local development)
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_API_BASE_URL=http://localhost:3001
# GOOGLE_REDIRECT_URI=http://localhost:3000/google/oauth/callback

OPENAI_KEY='your-openai-api-key-here'