{
  "name": "web-app",
  "scripts": {
    "prepare": "husky || true",
    "dev": "next dev",
    "dev:api": "IS_OFFLINE=true AWS_PROFILE=myagency AWS_REGION=us-west-1 TABLE_NAME=agency-narrative-crm serverless offline --stage local",
    "build": "next build",
    "postbuild": "rm -rf .next/cache",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "infra:deploy": "serverless deploy --stage ${STAGE:-prod} --region ${AWS_REGION:-us-west-1}",
    "infra:remove": "serverless remove --stage ${STAGE:-prod} --region ${AWS_REGION:-us-west-1}",
    "infra:seed": "node scripts/seed-dynamo.mjs",
    "test:e2e": "npx playwright test",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:login": "npx playwright test login.spec.ts",
    "test:e2e:spa": "npx playwright test spa-navigation.spec.ts",
    "test:e2e:settings": "npx playwright test settings-save.spec.ts",
    "test:e2e:impersonation": "npx playwright test impersonation.spec.ts",
    "test:e2e:lists": "npx playwright test lists.spec.ts",
    "test:e2e:dashboard": "npx playwright test dashboard.spec.ts",
    "test:e2e:agents": "npx playwright test agents.spec.ts",
    "test:e2e:prompts": "npx playwright test ai-prompts.spec.ts",
    "test:e2e:recruiter": "npx playwright test recruiter-wizard.spec.ts",
    "test:e2e:crm": "npx playwright test crm.spec.ts",
    "test:e2e:notes": "npx playwright test notes.spec.ts",
    "test:e2e:client-create": "npx playwright test client-create.spec.ts",
    "test:e2e:tasks": "npx playwright test tasks.spec.ts",
    "test:e2e:portal": "npx playwright test portal-navigation.spec.ts",
    "test:e2e:ux": "npx playwright test ux-improvements.spec.ts",
    "test:e2e:suggestions": "npx playwright test suggestions.spec.ts",
    "test:e2e:report": "npx playwright show-report"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.687.0",
    "@aws-sdk/client-s3": "^3.966.0",
    "@aws-sdk/client-ses": "^3.980.0",
    "@aws-sdk/lib-dynamodb": "^3.687.0",
    "@aws-sdk/s3-request-presigner": "^3.966.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fullcalendar/daygrid": "^6.1.20",
    "@fullcalendar/interaction": "^6.1.20",
    "@fullcalendar/react": "^6.1.20",
    "@fullcalendar/timegrid": "^6.1.20",
    "@mui/icons-material": "^7.3.5",
    "@mui/material": "^7.3.5",
    "@mui/system": "^7.3.5",
    "@mui/x-data-grid": "^8.19.0",
    "@sentry/aws-serverless": "^10.32.1",
    "@sentry/nextjs": "^10.32.1",
    "@tanstack/react-query": "^5.90.10",
    "bcryptjs": "^2.4.3",
    "driver.js": "^1.4.0",
    "googleapis": "^166.0.0",
    "next": "^16.0.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "react-quill-new": "^3.7.0",
    "recharts": "^3.7.0",
